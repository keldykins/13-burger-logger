<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="row">
      <div class="col-sm">

        <h1 class="display-4">Burgers!</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-sm">

        <h2 class="lead">Burgers that are not devoured!</h2>

        <ul class="list-group">
          {{#each burgers}}
          {{#unless devoured}}
          <li class="list-group-item">
            {{name}}
            <button class="btn btn-outline-primary" data-id="{{id}}">
              EAT!
            </button>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
      </div>


      <div class="col-sm">
        <h2 class="lead">Burgers that are devoured!</h2>

        <ul class="list-group">
          {{#each burgers}}
          {{#if devoured}}
          <li class="list-group-item">
            {{name}}
          </li>
          {{/if}}
          {{/each}}
        </ul>
      </div>

      <div class="col-sm">
        <h2 class="lead">Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="burger">Burger Name: </label>
            <input type="text" id="burger" name="name">
          </div>
          <button class="btn btn-primary btn-lg" type="submit">Add Burger</button>
        </form>
      </div>
    </div>